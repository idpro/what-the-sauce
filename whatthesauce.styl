@import url(http://fonts.googleapis.com/css?family=Muli:300,400);

html,
body
  padding: 0
  margin: 0
  height: 100%
  position: relative


html
  background: url(images/bg-body.png) repeat top left

body
  background: url(images/bg-top.png) repeat-x top left
  padding-bottom: 250px

#wrapper
  padding: 15px

  h1
    font-size: 24px
    text-align: center
    text-transform: uppercase
    font-family: "Muli", "Helvetica Neue", Helvetica, Arial, sans-serif
    font-weight: 400
    padding: 50px 0
    letter-spacing: 15px

    a
      color: #de283d
      text-decoration: none

#image-list
  margin: 0 auto
  padding: 0 0 50px
  width: 90%

  .image
    width: 200px
    height: 240px
    margin: 0 0 75px
    position: relative
    list-style: none
    float: left
    margin: 10px
    position: relative

    .copy-image-url
      display: block

      #image-wrap
        width: 200px
        height: 200px
        overflow: hidden
        border: 1px solid #111
        border-radius: 5px
        background-size: cover

        &.selected
          box-shadow: 0 0 25px rgba(255, 0, 0, 0.5)

    #image-wrap-sauce
      width: 200px
      height: 200px
      outline: none

    p
      position: absolute
      top: 200px

      span
        display: block
        font-size: 14px
        height: 14px
        overflow: hidden

    #toppathwrap
      position: fixed
      top: 0px
      right:0px
      background-color:#F2F1E8
      padding:5px
      display:none

#edit-image-area

  label
    display: block
    float: left
    width: 150px

  input
    width: 300px

footer
  background-color: #2b2b2b
  padding: 50px 0
  position: absolute
  bottom: 0
  width: 100%

  .copyright
    font-family: "Muli", "Helvetica Neue", Helvetica, Arial, sans-serif
    font-weight: 300
    font-size: 11px
    float: right
    margin: 0 25px
    color: #fff

    a
      color: #fff







.cf
  /**
   * For IE 6/7 only
   * Include this rule to trigger hasLayout and contain floats.
  **/
  *zoom: 1

  &:before,
  &:after
    content: " " /* 1 */
    display: table /* 2 */

  &:after
    clear: both


.cf:before,
.cf:after {
    content: " " /* 1 */
    display: table /* 2 */
}

.cf:after {
    clear: both
}